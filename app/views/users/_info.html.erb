<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h3>User info</h3>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= image_tag user.get_profile_image(100, 100) %>
    </div>
  </div>
  <table class="table">
    <tbody>
      <tr>
        <th>name</td>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>introduction</td>
        <td><%= user.introduction %></td>
      </tr>
      <tr>
        <th>Follows</th>
        <td>
          <%= link_to followers_user_path(user) do %>
            <h6><%= user.followers.count %></h6>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Followers</th>
        <td>
          <%= link_to followers_user_path(user) do %>
            <h6><%= user.followeds.count %></h6>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-danger" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to edit_user_path(current_user), class: 'btn btn-outline-secondary btn-sm btn-block' do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </div>
</div>